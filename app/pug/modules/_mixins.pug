mixin directionsArticle(title, timeOne, timeTwo, teacher, link, course)
  article(class="directions__item course")
    h3(class="visually-hidden")= `Курсы по ${title}`
    picture(class="course__image-container")
      source(media="(max-width: 600px)", srcset=`images/phone/course-${course}.webp`, type="image/webp")
      source(media="(max-width: 1199px)", srcset=`images/tablet/course-${course}.webp`, type="image/webp")
      source(media="(min-width: 1200px)", srcset=`images/desktop/course-${course}.webp`, type="image/webp")
      source(media="(max-width: 600px)", srcset=`images/phone/course-${course}.jpg`, type="image/jpg")
      source(media="(max-width: 1199px)", srcset=`images/tablet/course-${course}.jpg`, type="image/jpg")
      source(media="(min-width: 1200px)", srcset=`images/desktop/course-${course}.jpg`, type="image/jpg")
      img(class="course__image" src=`images/desktop/course-${course}.jpg`, alt=`Наш замечательный курс по ${title}`)
    div(class="course__container")
      div(class="course__description")
        h3(class="course__title")= title
        p(class="course__timetable timetable")
          span(class="timetable__item span-block")= timeOne
          span(class="timetable__item span-block")= timeTwo
        p(class="course__teacher teacher")
          span(class="teacher__position span-block") Инструктор
          span(class="teacher__name span-block")= teacher
      a(class="course__link" href=link, target="_blank", rel="noopener noreferrer"): svg(class="course__icon"): use(xlink:href="images/sprite.svg#sp-right")